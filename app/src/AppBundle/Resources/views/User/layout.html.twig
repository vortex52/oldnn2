<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ 'admin.control_panel'|trans() }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/lib/bootstrap-4.3.1-dist/css/bootstrap.min.css') }}">        
        <link rel="stylesheet" href="{{ asset('/lib/bootstrap-multiselect/bootstrap-multiselect.css') }}">
        <link rel="stylesheet" href="{{ asset('/lib/jquery-ui-1.12.1/jquery-ui.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/lib/jquery-ui-1.12.1/jquery-ui.theme.css') }}">
        <link rel="stylesheet" href="{{ asset('/lib/font-awesome-4.7.0/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/user.css') }}" />

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>    
    <div class="container-fluid">
        <div class="row wrapper">
            {{ include('@App/Common/flash_messages.html.twig') }}
            {{ include('@App/User/header.html.twig') }}
            
            <main class="col bg-faded py-3">
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>

    <footer class="footer"></footer>
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/lib/jquery/jquery-1.12.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/lib/bootstrap-4.3.1-dist/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/lib/bootstrap-multiselect/bootstrap-multiselect.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/lib/jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/user.js') }}"></script>
{% endblock %}
</body>
</html>
