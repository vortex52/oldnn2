{% extends '@App/Front/layout.html.twig' %}

{% block ymaps_scripts %}
  <script src="https://api-maps.yandex.ru/2.1/?apikey=325a137d-6a6c-441d-baef-0d2b5fa16bfe&lang=ru_RU" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <div class="container mt-3 mb-3">
      <h1 class="text-center mb-3">{{ 'main_page.title'|trans() }}</h1>
      	<div class="row">

      
          
            <div class="input-group ui-widget p-2 mb-2">
              <input name="s" id="tags" type="text" class="form-control" placeholder="Поиск по тегам">
              <div class="input-group-append">
                <span class="input-group-text" id="clear-tags"><i class="fa fa-times" aria-hidden="true"></i></span>
              </div>
              {#<span class="input-group-append">
                <button type="submit" value="Search" class="btn btn-secondary" type="button"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;</button>
              </span>#}
            </div>
         

      		<div id="photo-block" class="col">
      			<div class="photo-block">
      				<div class="pb-header mb-2">
      				 	<h4 class="modal-title mr-1 pb-title">{{ first_point.title }}</h4>
          				<h2><span class="badge badge-secondary">{{ first_point.year }}</span></h2>
      				</div>
      				<div class="pb-body">
      				 	<img class="pb-img img-fluid rounded mx-auto d-block" src="{{ photo_src }}">
      				</div>
      				<div class="pb-footer">
          				<div class="pb-desrp w-100 pt-2">{{ first_point.description }}</div>
        			</div>
      				
      			</div>            
      		</div>
      		<div class="col">
      			<div id="map"></div>
            <div class="slider-block">
            	<p>
              	<label for="amount">{{ 'main_page.time_scale'|trans() }} </label>
              	<input type="text" id="amount" readonly style="border:0; font-weight:bold;">
            	</p>
            	<div id="slider-range"></div>
            </div>
      		</div>
  		</div>
      
      {% include '@App/Front/HomePage/blocks/modal.html.twig' %}

    </div>

    <script type="text/javascript">
      POINT_FIRTS_ID = {{ first_point.id }};
      YEAR_MAX = {{ year_range.max_year }};
      YEAR_MIN = {{ year_range.min_year }};
    </script>
    
{% endblock %}

{% block setting_map_script %}
  <script src="{{ asset('js/main-2.js') }}" type="text/javascript"></script>
{% endblock %}